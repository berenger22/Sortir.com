				{% if (is_granted ('IS_AUTHENTICATED_FULLY')) %}
					<div class="collapse navbar-collapse" id="navbarColor03">
						<ul class="navbar-nav mr-auto">
							{% if (is_granted ('ROLE_ADMIN')) %}
								<li class="nav-item">
									<a class="nav-link" href="#">Ville</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="#">Campus</a>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('home')}}">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('modifProfil', {'id' : app.user.id})}}">Mon profil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_logout')}}">Se d√©connecter</a>
