{% extends 'base.html.twig' %}

{% block title %}profil de {{participant.pseudo}}
{% endblock %}

{% block body %}
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-6 col-md-4">
			<div class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
				<h2>{{participant.pseudo}}</h2>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Nom :</h4>
				</div>
				<div class="col-md-6">
					<p>{{participant.nom}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Prénom :<h4>
				</div>
				<div class="col-md-6">
					<p>{{participant.prenom}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Email :</h4>
				</div>
				<div class="col-md-6">
					<p>{{participant.mail}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Téléphone :</h4>
				</div>
				<div class="col-md-6">
					<p>{{participant.telephone}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Campus :</h4>
				</div>
				<div class="col-md-6">
					<p>{{participant.campus.nom}}</p>
				</div>
			</div>
			
			<div class="row justify-content-md-center">
				<div class="form-group col-md-6">
					<a class="btn btn-lg btn-outline-secondary btn-block" href="{{path('home')}}" role="button">Retour</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

